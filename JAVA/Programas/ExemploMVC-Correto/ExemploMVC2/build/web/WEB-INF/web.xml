<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>InsereAutores</servlet-name>
        <servlet-class>br.com.Controle.InsereAutores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveAutores</servlet-name>
        <servlet-class>br.com.Controle.RemoveAutores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtualizaAutores</servlet-name>
        <servlet-class>br.com.Controle.AtualizaAutores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaAutores</servlet-name>
        <servlet-class>br.com.Controle.ListaAutores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultaAutores</servlet-name>
        <servlet-class>br.com.Controle.ConsultaAutores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MudaAutores</servlet-name>
        <servlet-class>br.com.Controle.MudaAutores</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsereAutores</servlet-name>
        <url-pattern>/IA</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveAutores</servlet-name>
        <url-pattern>/RA</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtualizaAutores</servlet-name>
        <url-pattern>/AA</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaAutores</servlet-name>
        <url-pattern>/LA</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultaAutores</servlet-name>
        <url-pattern>/CA</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MudaAutores</servlet-name>
        <url-pattern>/MA</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/Erro.jsp</location>
    </error-page>
    <error-page>
        <error-code> 404 </error-code>
        <location>/Erro2.jsp</location>
    </error-page>
    <error-page>
        <error-code> 500 </error-code>
        <location>/Erro3.jsp</location>
    </error-page>
</web-app>
