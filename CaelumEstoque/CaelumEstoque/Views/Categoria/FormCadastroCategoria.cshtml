<title>Cadastrar Categoria</title>
<form action="/Categoria/CadastrarCategoria" method="post">
   @Html.AntiForgeryToken()
    <label for="nome">Nome:</label>
    <input id="nome" name="categoria.Nome" class="form-control" />
    <label for="descricao">Descricao:</label>
    <input id="descricao" name="categoria.Descricao" class="form-control" />
    <input type="submit" value="Cadastrar" class="btn-block btn-success" />
</form>
@Html.RouteLink("Voltar ao Inicio", "Home")

